<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<%= @user.name %>, <%= @user.email %>
<p></p>
<div>Time now: <%= Time.now %></div>
<div>Created at: <%= @user.created_at %></div>
<div>Updated at: <%= @user.updated_at %></div>